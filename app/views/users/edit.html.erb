<%= form_with model: @user do |form| %>
    <%= form.label :username%>
    <%= form.text_field :username%>
    <%= form.label :password %>
    <%= form.password_field :password%>
    <%= form.label :email %>
    <%= form.text_field :email%>
    <%= form.submit%>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>Could not update user:</h2>
        <% @user.errors.each do |error| %>
          <p><%= error.full_message %></p>
        <% end %>
      </div>
    <% end %>
<% end %>